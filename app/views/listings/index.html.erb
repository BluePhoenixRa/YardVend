<duv class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= image_tag listing.image.url(:medium) %><br />
            <div class="caption">
              <h3><%= listing.name %></h3>
              <p><strong>Price:</strong> <%= number_to_currency(listing.price) %></p>
              <p><strong>Description:</strong> <%= listing.description %></p>
              <p><strong>Yard Owner:</strong> <%= "#{listing.user.first_name.capitalize} #{listing.user.last_name.capitalize}" %></p>
              <%= link_to 'Show', listing, class: "btn btn-link" %>
              <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
              <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
